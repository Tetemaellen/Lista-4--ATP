def verificar_triangulo(X, Y, Z):
    # Verifica se os valores podem formar um triângulo
    if X < Y + Z and Y < X + Z and Z < X + Y:
        if X == Y == Z:
            print("Triângulo Equilátero: os 3 lados são iguais.")
        elif X == Y or Y == Z or X == Z:
            print("Triângulo Isósceles: pelo menos 2 lados são iguais.")
        else:
            print("Triângulo Escaleno: os 3 lados são diferentes.")
    else:
        print("Os valores fornecidos não podem formar um triângulo.")

def main():
    while True:
        try:
            X = float(input("Digite o comprimento do lado X (ou um valor negativo para encerrar): "))
            if X < 0:
                break
            Y = float(input("Digite o comprimento do lado Y: "))
            Z = float(input("Digite o comprimento do lado Z: "))
            verificar_triangulo(X, Y, Z)
        except ValueError:
            print("Entrada inválida. Por favor, digite números válidos.")

if __name__ == "__main__":
    main()
